<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/grey"/>
            <stroke
                android:color="@color/white"
                android:width="0.5dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/light_green"/>
            <stroke
                android:color="@color/light_green"
                android:width="0.5dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>


</selector>